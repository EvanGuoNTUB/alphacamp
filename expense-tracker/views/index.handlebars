<!-- views/index.handlebars-->
<div class="filter">
  <div class="form-group" id='monthFilter'>
    <select class="form-control" id="monthFilter">
      <option>月份</option>
      <option value='Jan'>一月</option>
      <option value='Feb'>二月</option>
      <option value='Mar'>三月</option>
      <option value='Apr'>四月</option>
      <option value='May'>五月</option>
      <option value='Jun'>六月</option>
      <option value='Jul'>七月</option>
      <option value='Aug'>八月</option>
      <option value='Sep'>九月</option>
      <option value='Oct'>十月</option>
      <option value='Nov'>十一月</option>
      <option value='Dec'>十二月</option>
    </select>
  </div>
  <div class="form-group" id='categoryFilter'>
    <select class="form-control" id="categoryFilter">
      <option>種類</option>
      <option value='home'>家居物業</option>
      <option value='transport'>交通出行</option>
      <option value='entertain'>休閒娛樂</option>
      <option value='food'>餐飲食品</option>
      <option value='other'>其他</option>
    </select>
  </div>
</div>
<div id="totalAmount">
  <h4>總金額：</h4>
  <p>{{totalAmount}} 元</p>
</div>

<!-- combine original ./layouts/partials/records.handlebars -->
{{#each record}}
<div class="record">
  <div class="cell">
    {{#ifEquals category '家居物業'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-home"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-white">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '交通出行'}}
    <div class="left-cell bg-light">
      <div class="icon">
        <i class="fas fa-shuttle-van"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-light">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '休閒娛樂'}}
    <div class="left-cell bg-light">
      <div class="icon">
        <i class="fas fa-grin-beam"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-light">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '餐飲食品'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-utensils"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-white">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '其他'}}
    <div class="left-cell bg-light">
      <div class="icon">
        <i class="fas fa-pen"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-light">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}

    <div class="right-cell">
      <div class="btn-group" role="group" aria-label="Basic example">
        <a href="/records/{{this._id}}/edit" class="text-secondary">
          <button type="button" class="btn btn btn-secondary">修改</button>
        </a>

        <!--Button trigger modal-->
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#a{{this.id}}">刪除</button>
        <!--Modal-->
        <div class="modal fade" id="a{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
              </div>
              <div class="modal-body">
                <h6>請再次確認，您真的要刪除嘛？</h6>
              </div>
              <div class="modal-footer">
                <div class="btn-group" role="group" aria-label="Basic example">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">回首頁</button>
                  <form action="/records/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">刪除</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}

<!-- BUTTON -->
<div id="addRecord">
  <a href="/records/edit" class="text-secondary">
    <button type="button" class="btn btn btn-info">新增支出</button>
  </a>
</div>