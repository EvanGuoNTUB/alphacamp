<!-- views/index.handlebars-->
<div class="filter">
  <div class="btn-group" id='monthFilter'>
    <button type="button" class="btn btn-info dropdown-toggle monthDropdownBtn" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false" data-item="{{key1}}">月份</button>
    <div class="dropdown-menu dropdown-menu-right">
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Jan&category=">一月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Feb&category=">二月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Mar&category=">三月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Apr&category=">四月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=May&category=">五月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Jun&category=">六月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Jul&category=">七月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Aug&category=">八月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Sep&category=">九月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Oct&category=">十月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Nov&category=">十一月</a>
      <a class="dropdown-item monthDropdownItem" href="/records/filter?month=Dec&category=">十二月</a>
    </div>
  </div>

  <div class="btn-group" id='categoryFilter'>
    <button type="button" class="btn btn-info dropdown-toggle categoryDropdownBtn" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false" data-item="{{key2}}">種類</button>
    <div class="dropdown-menu dropdown-menu-right">
      <a class="dropdown-item categoryDropdownItem" href="/records/filter?category=home&month=">家居物業</a>
      <a class="dropdown-item categoryDropdownItem" href="/records/filter?category=transport&month=">交通出行</a>
      <a class="dropdown-item categoryDropdownItem" href="/records/filter?category=entertain&month=">休閒娛樂</a>
      <a class="dropdown-item categoryDropdownItem" href="/records/filter?category=food&month=">餐飲食品</a>
      <a class="dropdown-item categoryDropdownItem" href="/records/filter?category=other&month=">其他</a>
    </div>
  </div>
</div>
<div id="totalAmount">
  <h4>總金額：</h4>
  <p>{{totalAmount}} 元</p>
</div>

<!-- combine original ./layouts/partials/records.handlebars -->
{{#each record}}
<div class="record">
  <div class="cell">
    {{#ifEquals category '家居物業'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-home"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '交通出行'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-shuttle-van"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '休閒娛樂'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-grin-beam"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '餐飲食品'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-utensils"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '其他'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-pen"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    {{/ifEquals}}
    <div class="clearfix"></div>
    <div class="right-cell">
      <p>{{this.amount}}</p>
      <div class="btn-group" role="group" aria-label="Basic example">
        <a href="/records/{{this._id}}/edit" class="text-secondary">
          <button type="button" class="btn btn btn-secondary">修改</button>
        </a>

        <!--Button trigger modal-->
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#a{{this.id}}">刪除</button>
        <!--Modal-->
        <div class="modal fade" id="a{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
              </div>
              <div class="modal-body">
                <h6>請再次確認，您真的要刪除嘛？</h6>
              </div>
              <div class="modal-footer">
                <div class="btn-group" role="group" aria-label="Basic example">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">回首頁</button>
                  <form action="/records/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">刪除</button>
                  </form>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}

