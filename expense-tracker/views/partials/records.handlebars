<!-- ./layouts/partials/records.handlebars -->
{{#each record}}
<div class="record">
  <div class="cell">
    {{#ifEquals category '家居物業'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-home"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-white">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '交通出行'}}
    <div class="left-cell bg-light">
      <div class="icon">
        <i class="fas fa-shuttle-van"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-light">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '休閒娛樂'}}
    <div class="left-cell bg-light">
      <div class="icon">
        <i class="fas fa-grin-beam"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-light">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '餐飲食品'}}
    <div class="left-cell bg-white">
      <div class="icon">
        <i class="fas fa-utensils"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-white">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}
    {{#ifEquals category '其他'}}
    <div class="left-cell bg-light">
      <div class="icon">
        <i class="fas fa-pen"></i>
      </div>
      <div class="description">
        <p>{{this.name}}</p>
        <p>{{this.date}}</p>
      </div>
    </div>
    <div class="middle-cell bg-light">
      <p>{{this.amount}}</p>
    </div>
    {{/ifEquals}}

    <div class="right-cell">
      <div class="btn-group" role="group" aria-label="Basic example">
        <a href="/records/{{this._id}}/edit" class="text-secondary">
          <button type="button" class="btn btn btn-secondary">修改</button>
        </a>

        <!--Button trigger modal-->
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#a{{this.id}}">刪除</button>
        <!--Modal-->
        <div class="modal fade" id="a{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
              </div>
              <div class="modal-body">
                <h6>請再次確認，您真的要刪除嘛？</h6>
              </div>
              <div class="modal-footer">
                <div class="btn-group" role="group" aria-label="Basic example">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">回首頁</button>
                  <form action="/records/{{this.id}}/delete?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">刪除</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}