<!-- views/login.handlebars -->
<!-- load partial view of "messages" -->
{{> messages}}
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">登入</h1>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="請輸入 Email" />
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入 Password" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">登入</button>
        <a href="/auth/facebook" class="btn btn-success btn-block">Facebook 登入</a>
        <a href="/auth/google" class="btn btn-info btn-block">Google 登入</a>
        <a href="/auth/github" class="btn btn-dark btn-block">Github 登入</a>
      </form>
      <p class="lead mt-4">
        還沒有帳號? <a href="/users/register">註冊</a>
      </p>
    </div>
  </div>
</div>